<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMerchandise">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Category:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/EditText_BrandName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/spinner1"
        android:hint="Group Name" />

    <EditText
        android:id="@+id/EditText_ManuAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/EditText_BrandName"
        android:hint="Price" />

    <EditText
        android:id="@+id/EditText_Material"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/EditText_ManuAddress"
        android:hint="Material" />

    <EditText
        android:id="@+id/EditText_prodID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/EditText_Material"
        android:hint="Product Id" />

    <TextView
        android:id="@+id/TextView_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditText_prodID"
        android:layout_marginTop="10dp"
        android:hint="In Stock?" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_return"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:text="Yes" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_return"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="180dp"
        android:layout_toEndOf="@+id/radioButton"
        android:text="No" />

    <TextView
        android:id="@+id/TextView_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton2"
        android:layout_marginTop="10dp"
        android:hint="Set Price and Quantity"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_below="@+id/TextView_size"
        android:layout_marginTop="15dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_S"
            android:layout_width="match_parent"
            android:layout_height="360dp">

            <TextView
                android:id="@+id/textViewS"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="S"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/edt_priceS"
                android:layout_width="144dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"

                android:layout_marginStart="8dp"
                android:ems="10"
                android:inputType="number|text"
                android:text="Price"
                app:layout_constraintStart_toEndOf="@+id/textViewS"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/edt_qtyS"
                android:layout_width="144dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"

                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="number|text"
                android:text="Quantity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edt_priceS"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/textViewM"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="M"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewS" />

            <TextView
                android:id="@+id/textViewL"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="L"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewM" />

            <TextView
                android:id="@+id/textViewXL"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="XL"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewL" />

            <TextView
                android:id="@+id/textViewXXL"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="XXL"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewXL" />

            <EditText
                android:id="@+id/edt_priceM"
                android:layout_width="144dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="number|text"
                android:text="Price"
                app:layout_constraintStart_toEndOf="@+id/textViewM"
                app:layout_constraintTop_toBottomOf="@+id/edt_priceS"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/edt_priceL"
                android:layout_width="144dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="number|text"
                android:text="Price"
                app:layout_constraintStart_toEndOf="@+id/textViewL"
                app:layout_constraintTop_toBottomOf="@+id/edt_priceM"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/edt_priceXL"
                android:layout_width="144dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="number|text"
                android:text="Price"
                app:layout_constraintStart_toEndOf="@+id/textViewXL"
                app:layout_constraintTop_toBottomOf="@+id/edt_priceL"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/edt_priceXXL"
                android:layout_width="144dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="number|text"
                android:text="Price"
                app:layout_constraintStart_toEndOf="@+id/textViewXXL"
                app:layout_constraintTop_toBottomOf="@+id/edt_priceXL"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/edt_qtyM"
                android:layout_width="144dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="number|text"
                android:text="Quantity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edt_priceM"
                app:layout_constraintTop_toBottomOf="@+id/edt_qtyS"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/edt_qtyM2"
                android:layout_width="144dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="number|text"
                android:text="Quantity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edt_priceL"
                app:layout_constraintTop_toBottomOf="@+id/edt_qtyM"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/edt_qtyM3"
                android:layout_width="144dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="number|text"
                android:text="Quantity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toEndOf="@+id/edt_priceXL"
                app:layout_constraintTop_toBottomOf="@+id/edt_qtyM2"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/edt_qtyM4"
                android:layout_width="144dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="number|text"
                android:text="Quantity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toEndOf="@+id/edt_priceXXL"
                app:layout_constraintTop_toBottomOf="@+id/edt_qtyM3"
                tools:ignore="MissingConstraints" />


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</RelativeLayout>