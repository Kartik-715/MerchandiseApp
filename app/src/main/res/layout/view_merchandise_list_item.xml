<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/address"
        android:padding="10dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="151dp"
            android:layout_height="164dp"
            android:layout_below="@+id/cart_product_status"
            android:layout_marginTop="12dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_status"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/product_image"
            android:paddingLeft="20dp"
            android:text="Product Name"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_product_quantity"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/product_image"
            android:paddingLeft="20dp"
            android:text="Quantity:"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/product_quantity_spinner"
            style="@style/FirebaseUI.CountrySpinner"
            android:layout_width="27dp"
            android:layout_height="31dp"
            android:layout_below="@+id/cart_product_quantity"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/product_image"
            android:background="@android:drawable/btn_dropdown"
            android:paddingLeft="40dp"
            android:spinnerMode="dropdown"
            android:textSize="16sp"
            android:textStyle="bold"
            android:theme="@style/Base.TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="201dp"
            android:layout_height="32dp"
            android:layout_below="@+id/product_quantity_spinner"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="66dp"
            android:layout_toRightOf="@+id/product_image"
            android:paddingLeft="20dp"
            android:text="Product Price"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_product_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:text="Product Status"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/fui_bgGitHub"
            android:textColorHighlight="@color/CadetBlue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cart_edit_item"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"


            android:layout_marginTop="35dp"
            android:background="@color/Tomato"
            android:text="Edit Merchandise"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/cart_remove_item"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_image"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"

            android:background="@color/Tomato"
            android:text="Remove"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/cart_make_public"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_image"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="19dp"
            android:background="@color/Tomato"
            android:text="Make Public"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />


    </RelativeLayout>

</android.support.v7.widget.CardView>