<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reviews">

    <RatingBar
        android:id="@+id/reviewsBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewClick"
        app:layout_constraintVertical_bias="0.013" />

    <EditText
        android:id="@+id/reviews"
        android:layout_width="329dp"
        android:layout_height="128dp"
        android:layout_marginTop="28dp"
        android:gravity="start"
        android:hint="Commments"
        app:layout_constraintTop_toBottomOf="@+id/reviewsBar"
        tools:layout_editor_absoluteX="41dp" />

    <Button
        android:id="@+id/reviewClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Paste Review"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="135dp" />
</android.support.constraint.ConstraintLayout>